{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gender Distribution of Arrivals",
    "offset": 20
  },
  "data": {"url": "gender_counts.csv"},
  "mark": {
    "type": "arc",
    "tooltip": true,
    "innerRadius": 70
  },
  "encoding": {
    "theta": {"field": "Percent", "type": "quantitative"},
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": {
        "domain": ["Male", "Female"],
        "range": ["#4A90E2", "#FF69B4"]
      }
    },
    "tooltip": [
      {"field": "Gender", "type": "nominal"},
      {"field": "Count", "type": "quantitative", "format": ",", "title": "Arrivals"},
      {"field": "Percent", "type": "quantitative", "title": "Percentage (%)"}
    ]
  },
  "view": {"stroke": null},
  "width": 300,
  "height": 300
}
